extends layout

block content
  div.row.border-bottom.white-bg.dashboard-header
    div.col-md-4
      h2 Hoşgeldiniz #{user.displayName}
      small Onayınızı bekleyen 2 rapor var.

  div.row
    div.col-lg-12
      div.wrapper.wrapper-content
        div.row
          div.col-lg-6
            div.ibox.float-e-margins
              div.ibox-title
                h5 Onay bekleyen raporlar
                span.label.label-primary 2
                div.ibox-tools
                  a.collapse-link
                    i.fa.fa-chevron-up
              div.ibox-content
                div
                  div.feed-activity-list
                    div.feed-element
                      a.pull-left(href='profile.html')
                        img.img-circle(alt='image', src='/images/profile.jpg')
                      div.media-body
                        small.pull-right
                          a.btn.btn-sm.btn-primary(href='#')
                            i.fa.fa-search
                        strong [KULLANICI_ADI] 
                        | yeni bir 
                        strong [RAPOR_TURU] 
                        | oluşturdu.
                        br
                        small 17.07.2018
                    div.feed-element
                      a.pull-left(href='profile.html')
                        img.img-circle(alt='image', src='/images/a2.jpg')
                      div.media-body
                        small.pull-right
                          a.btn.btn-sm.btn-primary(href='#')
                            i.fa.fa-search
                        strong [KULLANICI_ADI] 
                        | yeni bir 
                        strong [RAPOR_TURU] 
                        | oluşturdu.
                        br
                        small 16.07.2018
                  p.text-center.m-t(style='margin-bottom: 0')
                    small Toplam 2 rapor

          div.col-lg-6
            div.ibox.float-e-margins
              div.ibox-title
                h5 Raporlarım
                span.label.label-primary= approvedReports
                span.label.label-warning= createdReports
                span.label.label-danger= rejectedReports
                div.ibox-tools
                  a.collapse-link
                    i.fa.fa-chevron-up
              div.ibox-content
                div
                  div.feed-activity-list
                    each report in userReports
                      - var url = 'reports/edit/' + report._id 
                      div.feed-element
                        a.pull-left(href='profile.html')
                          img.img-circle(alt='image', src='/images/profile.jpg')
                        div.media-body
                          small.pull-right
                            a.btn.btn-sm.btn-primary(href='/' + url)
                              i.fa.fa-search
                          | Bir 
                          strong= report.category
                          |  oluşturdunuz.
                          br
                          small= report.createdat
                  //- button.btn.btn-primary.btn-block.m-t Daha fazla

          //- div.col-lg-6
            div.ibox.float-e-margins
              div.ibox-title
                h5 Son etkinlikler
                div.ibox-tools
                  a.collapse-link
                    i.fa.fa-chevron-up
              div.ibox-content.no-padding
                ul.list-group
                  li.list-group-item
                    p Bir <a>rapor</a> onayladınız.
                    small.block.text-muted
                      i.fa.fa-clock-o
                      |  1 dakika önce
                  li.list-group-item
                    p Bir <a>rapor</a>u reddettiniz.
                    small.block.text-muted
                      i.fa.fa-clock-o
                      |  1 gün önce

